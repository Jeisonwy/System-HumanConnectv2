FROM python:3.11-slim

WORKDIR /app

# Asegurar PYTHONPATH para que 'import app' funcione en contenedor
ENV PYTHONPATH=/app

# Copiar dependencias e instalarlas
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar el código de la aplicación
COPY . .

# Exponer puerto (opcional)
EXPOSE 5000

# Ejecutar Flask (ajusta si tienes script distinto)
# Si tu entrypoint es app.app (módulo que ejecuta run), manténlo; ejemplo:
CMD ["python", "-m", "app.app"]
